<!-- https://www.npmjs.com/package/express-ejs-layouts -->

        <div>
            <h4>To Do List:</h4>
            <ol>
                <% result.forEach(output => { %>
                    <li><%= output %></li>
                <% }) %>
            </ol>
        </div>
        <div>
            <form action="/api/todo/add" method="POST">

                <label for="task">Insert task here: </label>
                <input id="entry" name="entry">
                <input type="submit" value="submit">

            </form>
        </div>


        <div>
            <form action="/api/todo/remove" method="POST">

                <label for="task">Task number to delete: </label>
                <input id="remove" name="remove">
                <input type="submit" value="submit">

            </form>
        </div>

        <div>
            <form action="/api/todo/update" method="POST">

                <label for="task">Task number to update: </label>
                <input id="record" name="record">
                <label for="task-name">Updated Task name: </label>
                <input id="data" name="data">
                <input type="submit" value="submit">

            </form>
        </div>
    </body>
</html>